<h4>Add a collaborator</h4>
<%= form_for [wiki, collaborator] do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control', placeholder: "Enter user email" %>
    <br>
    <%= f.submit "Add Collaborator", class: 'btn btn-success' %>
  </div>
<% end %>
<h4>Current Collaborators:</h4>
<%= wiki.collaborators.each do |c| %>
  <div class="media">
    <div class="media-body">
      <strong><%= c.user_id %></strong> <%= link_to "Delete Collaborator", wiki_collaborator_path(wiki, c), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this collaborator?' } %>
    </div>
  </div>
<% end %>
